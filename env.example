# Copia questo file in .env per sviluppo locale (NON committare)
# Su Render imposta queste variabili nella Dashboard/Secrets

# Chiave OpenAI (solo backend)
OPENAI_API_KEY=
OPENAI_PROJECT=
OPENAI_BASE_URL=

# Modello (configurabile senza cambiare codice)
OPENAI_MODEL=gpt-4o-mini

# Token massimi in output (limita consumo)
OPENAI_MAX_TOKENS=800
OPENAI_RPM=30
OPENAI_CONCURRENCY=2
SPREAD_DISABLE=0
CHUNK_PAUSE_MS=0
OPENAI_MAX_INPUT_CHARS=50000

# (Opzionale) Usa OpenRouter al posto di OpenAI
# Imposta la base URL e la chiave OpenRouter; lascia vuoti PROJECT/BASE_URL OpenAI
# OPENAI_BASE_URL=https://openrouter.ai/api/v1
# OPENAI_API_KEY=sk-or-v1-...
# Consigliato modello: OPENAI_MODEL=openrouter/auto oppure openai/gpt-4o-mini

# Porta (Render imposta automaticamente PORT)
PORT=8787

# Origins consentiti per CORS (se vuoto: permette tutti in dev)
# Separare con virgole, es.: https://tuo-dominio.it,https://username.github.io
ALLOWED_ORIGINS=

# Chiave API server opzionale (se impostata, inviare header x-api-key)
SERVER_API_KEY=
